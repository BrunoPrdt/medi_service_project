{% extends'base.html.twig' %}
{% block title 'Se connecter' %}
{% block body %}
        <section class="vert">
            <div class="container-fluid mt-4">

                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey | trans(error.messagedata, 'security') }}</div>
                {% endif %}

                <div class="row">
                    <div class="col">
                        <h1 class="text-right text-white my-5 mr-5">Se connecter &nbsp; &nbsp;</h1>
                    </div>
                </div>
                <div class="row my-5">

                    <div class="col-md-6 mb-5 ml-5">
                        <section id="conteneur">
                            <section id="login">
                                <h2 class="text-white mt-5">Medi</h2>
                            </section>
                            <h2 class="text-white ml-5 mt-4">&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; Services</h2>
                        </section>
                    </div>

                    <div class="col-md-3 col-md-offset-2">
                        <form action="{{ path('login') }}" method="post">
                            <div class="form-group">
                                <label for="username">Adresse email</label>
                                <input class="form-control" type="text" id="username" name="_username" value="demo_sad@mediservice.fr{#lastusername #}">
                            </div>

                            <div class="form-group">
                                <label for="password">Mot de passe</label>
                                <input type="password" id="password" name="_password" class="form-control" value="superadmin">
                                <!-- <input type="password" id="password" name="_password" class="form-control"> -->
                            </div>

                            <div>
                                <input type="hidden" name="_csrf_token"
                                       value="{{ csrf_token('authenticate') }}">
                            </div>

                            <div class="row ml-1 my-5">
                                <button type="submit" class="btn btn-secondary">Se connecter</button>
                            </div>
                        </form>
                    </div>

                </div>

            </div>
        </section>

{% endblock %}