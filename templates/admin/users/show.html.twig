{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block body %}

    <section class="vert text-white pt-3">
        <div class="container-fluid">

            <h1 class="text-white my-5">Utilisateur</h1>

            <table class="table text-white">
                <tbody>
                <tr>
                    <td>Id de l'utilisateur</td>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Nom d'utilisateur</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Mot de passe</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>Categorie</th>
                    <td>{{ user.category }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ user.mail }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary my-3" href="{{ path('users_index') }}">Retour Ã  la liste</a>

            <div class="row">
                <div class="col my-3">
                    {{ include('admin/users/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
