{% extends 'base.html.twig' %}

{% block title %}Utilisateur - index{% endblock %}

{% block body %}
    <section class="vert text-white pt-5">
        <a class="btn btn-primary float-right" href="{{ path('users_new') }}">Créer un nouvel utilisateur</a>
        <h1 class="ml-2 my-1">Utilisateur - index</h1>

        <table class="table text-white">
            <thead>
            <tr>
                <th>Username</th>
                <th>Category</th>
                <th>Mail</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.username }}</td>
                    <td>{{ user.category }}</td>
                    <td>{{ user.mail }}</td>
                    <td>
                        <a class="btn btn-secondary mb-2" href="{{ path('users_show', {'id': user.id}) }}">Voir l'utilisateur</a>
                        {{ include('admin/users/_delete_form.html.twig') }}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

    </section>
{% endblock %}
