{% extends 'base.html.twig' %}

{% block title %}Prospects - index{% endblock %}

{% block body %}
    <section class="vert text-white pt-5">
        <h1 class="ml-2 my-1">Prospects - index</h1>

        <table class="table text-white">
            <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Address</th>
                <th>ZipCode</th>
                <th>City</th>
                <th>Phone</th>
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for prospect in prospects %}
                <tr>
                    <td>{{ prospect.id }}</td>
                    <td>{{ prospect.name }}</td>
                    <td>{{ prospect.address }}</td>
                    <td>{{ prospect.zipCode }}</td>
                    <td>{{ prospect.city }}</td>
                    <td>{{ prospect.phone }}</td>
                    <td>
                        <a class="btn btn-secondary" href="{{ path('prospects_show', {'id': prospect.id}) }}">Voir le prospect</a>
                        {% if is_granted('ROLE_SUPER_ADMIN') %}
                            <a class="btn btn-primary" href="{{ path('prospects_edit', {'id': prospect.id}) }}">Editer le prospect</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">Aucun résultat</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if is_granted('ROLE_SUPER_ADMIN') %}
            <a class="btn btn-primary" href="{{ path('prospects_new') }}">Créer un nouveau prospect</a>
        {% endif %}

    </section>
{% endblock %}
