{% extends 'base.html.twig' %}

{% block title %}Fiche client{% endblock %}

{% block body %}

    <section class="vert text-white pt-3">
        <div class="container-fluid">

            <h1 class="text-white my-3">Fiche client : {{ prospect.name }}</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ prospect.name }}</td>
                </tr>
                <tr>
                    <th>Mail</th>
                    <td>{{ prospect.mail }}</td>
                </tr>
                <tr>
                    <th>Adresse</th>
                    <td>{{ prospect.address }}</td>
                </tr>
                <tr>
                    <th>Code postale</th>
                    <td>{{ prospect.zipCode }}</td>
                </tr>
                <tr>
                    <th>Ville</th>
                    <td>{{ prospect.city }}</td>
                </tr>
                <tr>
                    <th>Téléphone</th>
                    <td>{{ prospect.phone }}</td>
                </tr>
                </tbody>
            </table>

            <a class="btn btn-secondary" href="{{ path('prospects_index') }}">Retour à la liste</a>

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                <a class="btn btn-primary" href="{{ path('prospects_edit', {'id': prospect.id}) }}">Editer</a>
            {% endif %}

            {% if is_granted('ROLE_SUPER_ADMIN') %}
                {{ include('admin/prospects/_delete_form.html.twig') }}
            {% endif %}
        </div>
    </section>

{% endblock %}
