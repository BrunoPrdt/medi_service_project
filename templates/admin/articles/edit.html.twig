{% extends 'base.html.twig' %}

{% block title %}Edition d'un matériel{% endblock %}

{% block body %}

    <section class="vert text-white pt-3">

        <div class="container-fluid">

            <h1 class="my-3">Edition d'un matériel</h1>

            {{ include('admin/articles/_form.html.twig', {'button_label': 'Valider l\'édition'}) }}

            <div class="row">
                <div class="col-6 mt-3">
                    <a class="btn btn-secondary mb-3" href="{{ path('articles_index') }}">Retour à la liste</a>
                </div>
                <div class="col-6 mt-3">
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                    {% elseif is_granted('ROLE_MAINTENANCE') %}
                        {{ include('admin/articles/_delete_form.html.twig') }}
                    {% endif %}
                </div>
            </div>
        </div>

    </section>

{% endblock %}
